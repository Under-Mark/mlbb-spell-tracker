<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#222222"
    android:padding="12dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- EXP Lane -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:text="EXP Lane"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/expSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/expButton"
                android:src="@drawable/flicker"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="EXP Spell"/>

            <TextView
                android:id="@+id/expCooldown"
                android:text="Ready"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Mid Lane -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:text="Mid Lane"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/midSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/midButton"
                android:src="@drawable/flicker"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Mid Spell"/>

            <TextView
                android:id="@+id/midCooldown"
                android:text="Ready"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Roamer -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:text="Roamer"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/roamerSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/roamerButton"
                android:src="@drawable/flicker"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Roamer Spell"/>

            <TextView
                android:id="@+id/roamerCooldown"
                android:text="Ready"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Jungler -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:text="Jungler"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/junglerSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/junglerButton"
                android:src="@drawable/flicker"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Jungler Spell"/>

            <TextView
                android:id="@+id/junglerCooldown"
                android:text="Ready"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Gold Lane -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginBottom="6dp">

        <TextView
            android:text="Gold Lane"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/goldSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/goldButton"
                android:src="@drawable/flicker"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Gold Spell"/>

            <TextView
                android:id="@+id/goldCooldown"
                android:text="Ready"
                android:textColor="#00FF00"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
